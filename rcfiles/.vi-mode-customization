#!/bin/zsh
DEFAULT_VI_MODE=viins

KEYTIMEOUT=1

zle-line-init() {
    zle -K $DEFAULT_VI_MODE
}

bindkey '^[[3~' delete-char
bindkey '^[[1~'  beginning-of-line
bindkey '^[[4~'  end-of-line

autoload -Uz edit-command-line
bindkey -M vicmd 'v' edit-command-line
zle -N edit-command-line

quit() {
    exit
}
zle -N quit

q() {
    exit
}
zle -N q
